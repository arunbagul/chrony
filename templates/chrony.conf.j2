# Generated by Ansible for {{ ansible_facts['fqdn'] }}
# Chrony Configuration for {{ ansible_facts['distribution'] }}

# Use NTP servers
{% for pool in ntp_server_pools %}
server {{ pool.name }} iburst
{% endfor %}


# Specify driftfile location
driftfile /var/lib/chrony/drift
makestep 1.0 3
rtcsync

# log file
{% if ansible_facts['os_family'] == 'RedHat' %}
# RedHat/CentOS specific settings
logdir /var/log/chronyd
{% elif ansible_facts['os_family'] == 'Debian' %}
# Debian/Ubuntu specific settings
logdir /var/log/chronyd
{% elif ansible_facts['os_family'] == 'Suse' %}
# SUSE specific settings
logdir /var/log/chronyd
{% endif %}
